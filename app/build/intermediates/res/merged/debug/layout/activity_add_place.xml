<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bbff"
    tools:context="com.shigaki.sano.safetymap.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/てすと"
                android:layout_width="110dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:background="#0070ff"
                android:gravity="center_vertical|center_horizontal|center"
                android:text="名前"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/add_name"
                android:layout_width="259dp"
                android:layout_height="61dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="#ffffff"
                android:ems="10"
                android:gravity="center_vertical|center_horizontal|center"
                android:inputType="text" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="公共の場所でないなら、名前欄に住所も入力してください。"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/apptitle"
            android:layout_width="369dp"
            android:layout_height="wrap_content"


            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginTop="15dp"
            android:layout_weight="0.04"
            android:background="#0070ff"
            android:gravity="center|center_vertical|center_horizontal|"
            android:text="説明"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="45dp" />

        <EditText
            android:id="@+id/add_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.42"
            android:background="#ffffff"
            android:ems="10"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_weight="0.25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:background="#0070ff"
                android:gravity="center"
                android:text="緯度"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/add_latitude"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="32.886034" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:background="#0070ff"
                android:gravity="center"
                android:text="経度"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/add_longitude"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="130.789641" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="デフォルトで合志市役所の緯度経度が入力されています&#xA;関係ないマーカーは追加しないでください&#xA;(フリじゃありません)" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginTop="10dp"
            android:background="#0070ff"
            android:gravity="center_vertical|center_horizontal|center"
            android:text="追加"
            android:textColor="#ffffff"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="168dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>